@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode ="true" @rendermode="InteractiveAuto"/>
<MudDialogProvider @rendermode="InteractiveAuto" DisableBackdropClick="true" CloseButton="true"/>
<MudSnackbarProvider @rendermode="InteractiveAuto"/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudImage Src="Resources/logo.png" Width="60" Height="60" Alt="Logo księgarni"/>
        <MudText Typo="Typo.h5" Class="my-lg-3 ms-lg-3 my-5 ms-5">Księgarnia Perła</MudText>
        <MudSpacer />
        <NavMenu />
        <MudSpacer />
        <UserMenu />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
