<MudDialog>
    <DialogContent>
        <MudText>Czy na pewno chcesz usunąć z @Content?</MudText>
        <MudText>Tytuł: @Model.Title</MudText>
        <MudText>Typ: @Model.Type</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Success" Variant="Variant.Filled" ButtonType="ButtonType.Button" OnClick="NoAnswer">Nie</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Outlined" ButtonType="ButtonType.Button" OnClick="YesAnswer">Tak</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance Dialog { get; set; }
    [Parameter] public DialogModel Model { get; set; }
    [Parameter] public string Content { get; set; }

    RemoveDialogReturnModel ReturnModel;

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        ReturnModel = new(Model);
    }

    private void NoAnswer()
    {
        ReturnModel.Remove = false;
        Dialog.Close(DialogResult.Ok(ReturnModel));
    }

    private void YesAnswer()
    {
        ReturnModel.Remove = true;
        Dialog.Close(DialogResult.Ok(ReturnModel));
    }
}
